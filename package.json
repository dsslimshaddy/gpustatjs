{
  "name": "gpustatjs",
  "version": "1.0.0",
  "main": "main.js",
  "license": "MIT",
  "description": "A GPU Monitor in Electron",
  "author": "dsslimshaddy",
  "scripts": {
    "clean": "rimraf build/",
    "start": "electron  .",
    "postinstall": "install-app-deps",
    "pack": "build --dir",
    "dist": "build"    
  },
  "dependencies": {
    "babel-register": "^6.26.0",
    "chart.js": "^2.6.0",
    "chartkick": "^2.2.4",
    "material-ui": "v1.0.0-beta.6",
    "pondjs": "^0.8.7",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-timeseries-charts": "^0.12.8"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "electron-builder": "^19.24.1",
    "electron-prebuilt-compile": "^1.7.5",
    "rimraf": "^2.6.1"
  },
  "build": {
    "appId": "org.gpuzjs.gpuzjs-electron",
    "copyright": "Â©2017 Slim, Inc.",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "background": "build/background.png",
      "icon": "build/icon.icns",
      "iconSize": 128,
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "category": "GNOME;GTK;",
      "packageCategory": "GNOME;GTK;",
      "description": "GPUZjs Desktop Client for Linux",
      "target": [
        "deb",
        "zip",
        "AppImage"
      ],
      "maintainer": "Slim Shady <dsslimshaddy@gmail.com>"
    },
    "deb": {
      "synopsis": "GPUZjs Desktop App"
    },    
    "win": { 
     "target": [
        {
          "target": "nsis-web", 
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "publisherName": "Slim, Inc."      
    },
    "nsis": {
      "perMachine": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }    
  }  
}
